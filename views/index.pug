doctype html
html
  head
    meta(http-equiv='Content-type' content='text/html; charset=utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='stylesheet' href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
    link(rel='stylesheet' href='css/line-login.css')
    title LINE Web Login
  body
    if (!user)
      .container
        .row
          .col-md-4.col-md-offset-4
            .area
              h4.text-center.area-margin LINE Web Login
              #web-login-button.center-block.area-margin
                a.center-block(href='/login/line')
    else
      h1 Hello, #{user.displayName}.
      h2 View your profile
      p Provider: #{user.provider}
      p ID: #{user.id}
      p Email: #{user.email || '---'}
      p Pictrue:
        img(src=user.pictureUrl width="100px")
